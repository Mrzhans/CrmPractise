<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
    <display-name>Archetype Created Web Application</display-name>
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.bjpowernode.filter.EncodingFilter</filter-class>
    </filter>
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>com.bjpowernode.filter.LoginFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>*.do</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>*.do</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>*.jsp</url-pattern>
    </filter-mapping>
    <listener>
        <listener-class>com.bjpowernode.listener.SysInitListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>UserLoginServlet</servlet-name>
        <servlet-class>com.bjpowernode.settings.web.controller.UserLoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ActivityServlet</servlet-name>
        <servlet-class>com.bjpowernode.workbench.web.controller.ActivityServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ClueServlet</servlet-name>
        <servlet-class>com.bjpowernode.workbench.web.controller.ClueServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TranServlet</servlet-name>
        <servlet-class>com.bjpowernode.workbench.web.controller.TranServlet</servlet-class>
    </servlet>


    <!--用户模块-->
    <servlet-mapping>
        <servlet-name>UserLoginServlet</servlet-name>
        <url-pattern>/settings/user/login.do</url-pattern>
    </servlet-mapping>

    <!--市场活动模块-->
    <servlet-mapping>
        <servlet-name>ActivityServlet</servlet-name>
        <url-pattern>/workbench/activity.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActivityServlet</servlet-name>
        <url-pattern>/workbench/activity/getUserList.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActivityServlet</servlet-name>
        <url-pattern>/workbench/activity/save.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActivityServlet</servlet-name>
        <url-pattern>/workbench/activity/pageList.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActivityServlet</servlet-name>
        <url-pattern>/workbench/activity/delete.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActivityServlet</servlet-name>
        <url-pattern>/workbench/activity/selectById.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActivityServlet</servlet-name>
        <url-pattern>/workbench/activity/update.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActivityServlet</servlet-name>
        <url-pattern>/workbench/activity/detail.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActivityServlet</servlet-name>
        <url-pattern>/workbench/activity/selectAllRemark.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActivityServlet</servlet-name>
        <url-pattern>/workbench/activity/updateRemark.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActivityServlet</servlet-name>
        <url-pattern>/workbench/activity/deleteRemark.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActivityServlet</servlet-name>
        <url-pattern>/workbench/activity/saveRemark.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActivityServlet</servlet-name>
        <url-pattern>/workbench/activtiy/selectActivityByName.do</url-pattern>
    </servlet-mapping>

    <!--线索模块-->
    <servlet-mapping>
        <servlet-name>ClueServlet</servlet-name>
        <url-pattern>/workbench/clue/getUserList.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClueServlet</servlet-name>
        <url-pattern>/workbench/clue/save.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClueServlet</servlet-name>
        <url-pattern>/workbench/clue/selectAllClue.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClueServlet</servlet-name>
        <url-pattern>/workbench/clue/detail.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClueServlet</servlet-name>
        <url-pattern>/workbench/clue/getActivityByClueId.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClueServlet</servlet-name>
        <url-pattern>/workbench/clue/delByActivityId.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClueServlet</servlet-name>
        <url-pattern>/workbench/clue/getActivtiys.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClueServlet</servlet-name>
        <url-pattern>/workbench/clue/createActivtiyRelation.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClueServlet</servlet-name>
        <url-pattern>/workbench/clue/convert.do</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>TranServlet</servlet-name>
        <url-pattern>/workbench/contact/selectContactByName.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TranServlet</servlet-name>
        <url-pattern>/workbench/tran/save.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TranServlet</servlet-name>
        <url-pattern>/workbench/tran/getECharts.do</url-pattern>
    </servlet-mapping>
</web-app>
